<section id="landing-products" class="section-block hero-3 bottom">
    <div class="row">
		    <div class="column width-5">
		        <div class="hero-content">
				        <div class="hero-content-inner color-light-charcoal">
				            <!-- <h2>Take a look at our featured items</h2> -->
                    <p class="lead">Our artisans share our passion for the perfection we demand</p>
                    <h1>Our featured products</h1>
				        </div>
			      </div>
		    </div>
	  </div>
</section>

<section id="landing-products-list" class="section-block bkg-white">
    <div class="row">
        <div class="column width-12">
            <div class="product-grid">
                <squarespace:query collection="products" limit="5">
                    {.repeated section items}
                    <script>console.log({@|json.pretty});</script>
                    <div class="grid-item">
                        <div class="thumbnail no-margin-bottom">
                            <img src="{assetUrl}" alt="{title}" />
                            <div class="overlay">
                                <a href="{fullUrl}" class="button large fade-location">
                                    {title}
                                </a>
                            </div>
                        </div>
                    </div>
                    {.end}
                </squarespace:query>
                <div class="grid-item">
						        <a href="/about" class="button large fade-location">View More</a>
                </div>
            </div>
        </div>
    </div>
</section>
